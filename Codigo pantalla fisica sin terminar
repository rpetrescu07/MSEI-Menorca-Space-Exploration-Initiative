#include "TFT.h"
#include "SPI.h"

#define cs 10 // pin para conexi칩n CS
#define dc 9 // pin para conexi칩n A0
#define rst 8 // pin para conexi칩n reset
TFT screen = TFT(cs, dc, rst);



void setup() {
  screen.begin();
   // limpieza de la pantalla
  screen.background(255, 0, 0);
}



void loop() {
  // tama침o de letra
  screen.setTextSize(2);
//color del text
  screen.stroke(0, 0, 0);
  screen.text("mundo", 3, 3);




  delay(1500);
  // limpieza de la pantalla
  screen.background(255, 0, 0);
  
}
